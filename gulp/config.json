{
    "paths": {
        "src": {
            "html": [
                "./src/app/*.html",
                "./src/app/**/*.html",
                "./src/app/**/**/*.html"
            ],
            "images": [
                "./src/img/*.*"
            ],
            "js": [
                "./src/app/*.js",
                "./src/app/**/*.js",
                "./src/app/**/**/*.js"
            ],
            "styles": [
                "./src/**/base.scss",
                "./src/**/colors.scss",
                "./src/**/**/*.scss",
                "./src/**/**/**/*.scss"
            ],
            "styles_imports": "./src/styles"
        },
        "vendor": [
            "./node_modules/**/*.js",
            "./node_modules/**/*.css",
            "./bower_components/**/*.js",
            "./bower_components/**/*.css"
        ]
    }
}
